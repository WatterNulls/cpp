				}

			//Impressao Resultado
				printf("\n\n");
				printf("Impressao do Resultado\n");
					if((FUNCIO[I].qtdat > 10) && (ANOATUA - FUNCIO[I].datan.ano > 30)){
						cprintf("%s \n",FUNCIO[I].nome);
						Cor += 1;
						C += 1;
					}else if(C == 0){
						printf("\n");
						cprintf("Nenhum Resultado Encontrado");
					}
		}

	//Impressao Valores Lidos
		//Muito extenso oO

	
	getch();
