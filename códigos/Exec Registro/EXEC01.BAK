	//Inicializacao Variaveis
		Cor = 0;

	//Leitura
		for(I = 0; I < MAX; I++){
			//Nome
				printf("Entre com o Nome do %iø Funcionario: ",(I+1));
					do{
						scanf("%s",&FUNCIO[I].nome);
					}while(FUNCIO[I].nome == "");
			//Rua
				printf("\n");
				printf("Entre com a Rua do Funcionario: ");
					do{
						scanf("%s",&FUNCIO[I].end.rua);
					}while(FUNCIO[I].end.rua == "");
			//Bairro
