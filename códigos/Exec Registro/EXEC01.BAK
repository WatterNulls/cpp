#include<stdio.h>
#include<conio.h>
#include<math.h>
#include<string.h>


int main(){

	clrscr();

	//Registros
		struct PAIS{
			char pai[50];
			char mae[50];
		};

		struct DT_NASC{
			int dia, mes, ano;
		};

		struct ENDER{
			char rua[30];
			char bairro[30];
			char cidade[30];
			char num[10];
			char complem[30];
		};

		struct FUNCS{
			char nome[50];
			struct PAIS filiac;
